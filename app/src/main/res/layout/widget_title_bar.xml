<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_title_bar_root"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/view_top_layout_bg" >

    <RelativeLayout
        android:id="@+id/title_left"
        android:layout_width="wrap_content"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_height="fill_parent"
        android:background="@drawable/arrow_selector"
        android:gravity="center" >

        <TextView
            android:id="@+id/title_left_tv"
            style="@style/title.right.text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="返回"
            android:visibility="gone"
            android:textColor="#ffffffff"
            android:textSize="@dimen/h16" />

        <ImageView
            android:id="@+id/title_left_iv"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:background="@drawable/icon_back_white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title_title_box"
        android:layout_width="190dp"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_title"
            style="@style/title.text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/arrow_selector" >

        <TextView
            android:id="@+id/title_right_tv"
            style="@style/title.right.text"
            android:layout_width="64dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="@dimen/h16" />

        <ImageView
            android:id="@+id/title_right_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>