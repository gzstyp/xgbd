<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ask_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_hint"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/dialog_action_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="联系我们"
        android:textColor="#ff000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ask_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_icon_up" />

    <ImageView
        android:id="@+id/ask_iv_closed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/icon_closed" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/ask_et"
            android:background="@drawable/edit_view"
            style="@style/et_h30"
            android:layout_width="80dp" />

        <Button
            android:id="@+id/ask_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_style"
            android:singleLine="true"
            android:text="提交"
            android:textSize="@dimen/h14" />
    </LinearLayout>

</LinearLayout>